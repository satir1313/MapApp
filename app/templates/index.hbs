<HorizentalNavbar />

<main class="container-fluid" style="height:100%;">

   <div class="row" style="padding-top: 20px; height: 70%;">
        <div class="col-md-3">
            <div class="row" style="height: 50%;">
                <Navbar @onPChecked={{action 'checkPointBox'}} @onIChecked={{action 'checkImageBox' }} />
            </div>
            <div class="row" style="margin-top: 12px; height: 50%;">
                <div style="margin-left: 10px;">
                    {{ember-youtube ytid="ukzyBxQ9Zsc" volume=60 width=350}}
                </div>
            </div>
        </div>

        <div class="col-md-2">


            <label>Lng <input type="text" id="lng" style="margin-top:12px; margin-bottom: 10px; margin-left: 10px"/> </label>

            <label>Lat <input type="text" id="lat" style="margin-top:12px; margin-left: 10px"/></label>

            <input type="button" value="Add Marker" style="margin-top:12px; margin-left: 70px" {{on 'click' addMarker}} />

        </div>

        <div class="col-md-7" >
            <div class="row" style="margin-top: 12px; height: 80%; margin-right: 5%;" id="mapElement">
                <Map @onMapClick={{action 'mapClicked'}} @markers={{this.marker}} @validatePointCheckBox={{this.pointChecked}}
                     @validateImageCheckBox={{this.imageChecked}} 
                     @style={{this.style}}
                     @center={{this.center}}
                     @zoom={{this.zoom}}
                     @newLng={{this.newLng}}
                     @newLat={{this.newLat}}
                     />  
            </div>

            <li style="margin-top: 2%;">Shift + Hold left click to zoom map in box</li>
            <li style="margin-top: 2%;"><a href="https://docs.mapbox.com/mapbox-gl-js/api/handlers/#keyboardhandler" target="_blank"> Keyboard shortcut</a> enabled</li>

            
        </div> 
    </div> 

    <div class="row" style="height: 20%; margin-top: 3%;" id="bottomMenu">
        <div class="col-md-12"><Details /></div>
    </div>
</main>

